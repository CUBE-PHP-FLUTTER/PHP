{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Téléphones en Vente{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-3">Téléphones en Vente</h1>
        <div class="row">
            {% for telephone in telephones %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="/uploads/images/{{ telephone.getImageRepository() }}/{{ telephone.getImageFileName() }}" alt="{{ telephone.getMarque() }} {{ telephone.getModele() }}">
                        <div class="card-body">
                            <h4 class="card-title">{{ telephone.getMarque() }}</h4>
                            <h5>{{ telephone.getModele() }}</h5>
                            <p class="card-text">{{ telephone.getCaracteristiques() }}</p>
                            <a href="/Telephone/show/{{telephone.getIDTelephone()}}" class="h5 streched-link">{{ telephone.getPrix() }} €</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Publié le {{ telephone.getDatePublication()|date("d/m/Y") }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
